alias webserver='ssh sk@192.168.225.22'
alias dns='ssh root@server.example.com'
alias dhcp='ssh axl@192.168.225.25 -p 2232'
alias ubuntu='ssh axl@192.168.225.50 -i ~/.ssh/id_rsa_remotesystem'
